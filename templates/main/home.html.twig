{% extends 'base.html.twig' %}

{% block body %}

    {% for message in app.flashes('success') %}
    <div class="flash-notice">
        <div class="alert alert-dismissible alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <h4 class="alert-heading">Bienvenue!</h4>
            <p class="mb-0">{{message}}</p>
        </div>
    </div>
    {% endfor %}

    <main class="container">
      <div class="row justify-content-center">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="col-12 col-md-8 px-4 py-3 mt-md-2 banner-top">
          <p>Envie de partager une de vos recettes avec nous ? </p>
          <a href=""><button class="btn banner-top-btn" type="button">Ajouter une recette</button></a>
        </div>
        {% else %}
        <div class="col-12 col-md-8 px-4 py-3 mt-md-2 banner-top">
          <p>Envie de partager une de vos recettes avec nous ? </p>
          <p>Inscrivez-vous et rejoignez-nous dans l'aventure zéro déchet !</p>
          <a href="{{ path('user_add') }}"><button class="btn banner-top-btn" type="button">Devenir membre</button></a>
        </div>
        {% endif %}
      </div>
      <div class="row justify-content-center best-recipes">
        <div class="col-12 pt-3 main-title">
          <h2>Les recettes les mieux notées</h2>
        </div>

{% for recipe in bestRecipes %}
        <div class="card col-11 col-sm-5 col-lg-3 pb-4 mt-3 my-md-4 mx-1 mx-md-2">
          <div class="pt-3">
            <div class="card-recipe-img">
              <a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}"><img src="{{ asset('assets/images/photo-recette.jpg') }}" class="card-img-top" alt="photo de la recette"></a>
            </div>
            <div class="card-body p-2">
              <h5 class="card-title card-recipe-title"><a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}">{{recipe.name}}</a></h5>
              <p class="card-rate">
              {% for i in 1..5 %}
                {% if recipe.averageRate >= i %}
                <i class="fa fa-star" aria-hidden="true"></i>
                {% else %}
                <i class="fa fa-star-o" aria-hidden="true"></i>
                {% endif %}
              {% endfor %}
              </p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <img src="{{ asset ('assets/images/image-profil.png') }}" class="card-profil-image" alt="">
            <div class="card-profil">
                <p>{{recipe.user.username}}</p>
                <a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}" class="btn card-btn">Voir la recette</a>
            </div>
          </div>
        </div>
{% endfor %}

      <div class="row justify-content-center last-recipes mb-5">
        <div class="col-12 pt-3 main-title">
          <h2>Les dernières recettes</h2>
        </div>
{% for recipe in latestRecipes %}
        <div class="card col-11 col-sm-5 col-lg-3 pb-4 mt-3 my-md-4 mx-1 mx-md-2">
          <div class="pt-3">
            <div class="card-recipe-img">
              <a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}"><img src="{{ asset('assets/images/photo-recette.jpg') }}" class="card-img-top" alt="photo de la recette"></a>
            </div>
            <div class="card-body p-2">
              <h5 class="card-title card-recipe-title"><a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}">{{recipe.name}}</a></h5>
              <p class="card-rate">
              {% for i in 1..5 %}
                {% if recipe.averageRate >= i %}
                <i class="fa fa-star" aria-hidden="true"></i>
                {% else %}
                <i class="fa fa-star-o" aria-hidden="true"></i>
                {% endif %}
              {% endfor %}
              </p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <img src="{{ asset ('assets/images/image-profil.png') }}" class="card-profil-image" alt="">
            <div class="card-profil">
                <p>{{recipe.user.username}}</p>
                <a href="{# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}" class="btn card-btn">Voir la recette</a>
            </div>
          </div>
        </div>
{% endfor %}
    </main>

{% endblock %}
