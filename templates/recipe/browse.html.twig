      <div class="row justify-content-center best-recipes">
        <div class="col-12 pt-3 main-title">
          <h2>Toutes les recettes</h2>
        </div>

{% for recipe in recipes %}
        <div class="card col-11 col-sm-5 col-lg-3 pb-4 mt-3 my-md-4 mx-1 mx-md-2">
          <div class="pt-3">
            <div class="card-recipe-img">
              <a href="recipe.html"><img src="{{ asset('assets/images/' ~ recipe.image) }}" class="card-img-top" alt="..."></a>
            </div>
            <div class="card-body p-2">
              <h5 class="card-title card-recipe-title"><a href="recipe.html">{{ recipe.name }}</a></h5>
              <p class="card-rate">
            {% for i in 1..5 %}
                {% if recipe.averageRate >= i %}
                <i class="fa fa-star" aria-hidden="true"></i>
                {% else %}
                <i class="fa fa-star-o" aria-hidden="true"></i>
                {% endif %}
              {% endfor %} 
              </p>
            </div>
          </div>
          <div class="d-flex justify-content-center">
            <img src="{{ asset('assets/images/' ~ recipe.user.image) }}" class="card-profil-image" alt="">
            <div class="card-profil">
                <p>Proposé par {{ recipe.user }}</p>
                <a href="#" class="btn card-btn">Voir la recette</a>
                {# {{ path('recipe_show', { 'slug': recipe.slug }) }} #}
            </div>
          </div>
        </div>
{% endfor %}
    </main>
{% endblock %}
